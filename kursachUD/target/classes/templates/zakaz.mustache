<form style="padding: 10px" method="post"action="addZakaz">
    <div class="form-row">
        <div class="form-group col-md-2">
            <label for="inputZakazName">Описание</label>
            <input type="text" name="zakazName" class="form-control" id="ZakazName" placeholder="Описание заказа">

        </div>
        <div class="form-group col-md-2">
            <label for="inputUserId">Id пользователя</label>
            <input type="number" name="userId" class="form-control" id="inputUserId" placeholder="Пользователь">
        </div>
        <div class="form-group col-md-2">
            <label for="inputTovarId">Id товара</label>
            <input type="number" name="tovarId" class="form-control" id="TovarId" placeholder="Товар">
        </div>
        <div class="form-group col-md-2">
            <label for="inputSotrId">Id сотрудника</label>
            <input type="number" name="sotrId" class="form-control" id="inputSotrId" placeholder="Сотрудник">
        </div>


    </div>
    <input type="hidden" name="_csrf" value="{{_csrf.token}}" />
    <button type="submit" class="btn btn-primary" >Добавить</button>
</form>

